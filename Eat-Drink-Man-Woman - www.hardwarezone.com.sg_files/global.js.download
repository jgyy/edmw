// Extend array with reduce function
if (typeof(Array.reduce) == 'undefined') {
	Array.prototype.reduce = function (fn, val, i) { return ((i = Array.pick([i, 0])) < this.length)? this.reduce(fn, fn(val, this[i]), i+1): val; }
}

// Ensure at least a fallback HWZ object exists & attach function placeholders
if (!window.HWZ) window.HWZ = {};

// Helper function to load saved preferences, falling back to HWZ object
HWZ.fn = {
	loadPref: function (key, defaultVal)
	{
		var param = key.split('.').reduce(function (a, b) { return a && a[b]; }, HWZ);
		return Array.pick ([HWZ.prefs && HWZ.prefs.get(key), defaultVal, param]);
	},
	autoCaption: function (img)
	{
		var imgs = [];
		var directly = false;
		if (!!img && ('tagName' in img) && img.tagName === 'IMG') {
			if (!!img.getParent('span.image-caption-container')) return;
			imgs = new Elements([img]);
			directly = true;
		} else if ($$('.article .content img[title]').length > 0) {
			if( $$('.image-caption-container').length > 0 ) return;
			imgs = $$('.article .content img[title]');
		}

		if (imgs.length < 1) return;

		imgs.each (function (img)
		{
			// skip if title is empty
			if (!img.get ('title').trim()) return;

			var nWidth = img.getSize().x;
			if (nWidth == 0) {
				img.addEvent('load', function(){ HWZ.fn.autoCaption(this); });
				return;
			}

			if (nWidth <= 120) nWidth = 'auto';

			new Element ('span', {'class': 'image-caption-container'})
				.addClass (['left', 'right'].contains (img.get ('align'))? img.get ('align'): '')
				.replaces (img)
				.grab (img)
				.grab (new Element ('div', {
					'class': 'image-caption' + (nWidth === 'auto' ? '-small' : ''),
					'html': img.get ('title').trim ()
				}))
			;
			img.erase ('align');
			if (directly) img.addClass('directly');

			var link = img.getParents ('a');
			if (link) link.addClass ('captioned');
		});
	},
