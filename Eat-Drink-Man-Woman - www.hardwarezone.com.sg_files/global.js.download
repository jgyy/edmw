var addthis_pub = "sphmnewmedia";

// Saved preferences
(function ()
{
	var re = /[^.]+\.(com|co)(\.[a-z]{2})?$/;
	var cookieOptions = {
		duration: 7,
		//domain: location.host.match(/[^.]+\.dev(\.[a-z]{2})?$/)[0],
		domain: re.test(location.host) ? location.host.match(re)[0] : location.host,
		path: '/'
	}
	try {
		HWZ.prefs = new Hash.Cookie('prefs', cookieOptions);
	} catch(e) {
		//got problem, re-create cookie
		Cookie.dispose('prefs', cookieOptions);
		HWZ.prefs = new Hash.Cookie('prefs', cookieOptions);
	}
})();

window.addEvent ('domready', function(){

	// Set defaults & customisations for TabSwapper class
	(function ()
	{
		var _addTab = TabSwapper.prototype.addTab;
		TabSwapper.implement ({
			options: {
				selectedClass: 'on',
				deselectedClass: 'off',
				mouseoverClass: 'over',
				mouseoutClass: 'out',
				smooth: true
			},
			addTab: function (tab, section, clicker, index)
			{
				_addTab.apply (this, [tab, section, clicker, index]);
				var clicker = tab.retrieve('clicker');
				if (clicker) clicker.addEvent ('click', function (e) { e.preventDefault (); clicker.blur (); });
			}
		});
	})();

	// Layout utility bar
	(function ()
	{
		if (!HWZ.layout || !HWZ.layout.enabled) return;
		//only applicable to forum
		if (!('foruminfo' in HWZ)) return;

		var aboveBar = $('nav-above');
		var floatingBar = $('floating-nav-bar');
		var canvas = $('canvas');
		var utilBar = new Element ('li', { 'class':'nav-top-layout-toggle'});
		var countrySelect = (!!floatingBar ? floatingBar.getElement('.nav-top-country') : null);
		if (!countrySelect) {
			countrySelect = aboveBar.getElement('.nav-top-country');
		}

		var layout = {
			widths: ['fixed', 'fluid'],
			get: function ()
			{
				return Array.pick([ layout.widths.filter(function (v) { return canvas.hasClass(v); })[0], layout.widths[1] ]);
			},
			set: function (width, nosave)
			{
				if (!utilBar || !canvas) return; 
				layout.widths.each (function (v) {
					utilBar.removeClass (v);
					canvas.removeClass(v);
				});
				utilBar.addClass (width);
				canvas.addClass (width);
				if (!nosave) HWZ.prefs.set ('layout.width', width);
			}
		};

		layout.set (HWZ.layout.width = HWZ.fn.loadPref('layout.width', layout.get()), true);

		var oFixed = new Element ('span', {
			'class':'nav-top-layout-fixed',
			'html': '1060',
			'events': { 'click': function(){ layout.set ('fixed'); } }
		});
		var oFluid = new Element ('span', {
			'class':'nav-top-layout-fluid',
			'html': '100%',
			'events': { 'click': function(){ layout.set ('fluid'); } }
		});
		var oSep = new Element ('span', {
			'class':'nav-top-layout-sep',
			'html': ''
		});
		utilBar.adopt (oFixed, oSep, oFluid);
		if (!!countrySelect) {
			utilBar.inject(countrySelect, 'after');
		}
	})();

	// Flash message
	(function ()
	{
		var flash = $('flashMessage');
		if (flash)
			(function ()
			{
				flash
					.set('tween', {'link':'chain', 'duration':'long'})
					.highlight ('#FFEA80')
					.fade()
					.tween('display', 'none');
			}).delay (5000);
	})();

});
